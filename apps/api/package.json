{
  "name": "@zeroguard/api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "migrate": "node --loader tsx src/db/migrate.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/cookie": "^9.3.1",
    "@fastify/multipart": "^8.1.0",
    "postgres": "^3.4.3",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4",
    "@noble/hashes": "^1.3.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.4.1",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "tsc-alias": "^1.8.8",
    "vitest": "^1.2.1",
    "@vitest/coverage-v8": "^1.2.1"
  }
}
